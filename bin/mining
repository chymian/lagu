#!/bin/bash

BASEDIR=$HOME/lagu
PRG=cpuminer

useage() {
echo usage $0 command
echo "command:
	start	Start mining
	stop	Stop mining
	enable	Enable autostart & Watchdog
	disable Disable autostart & Watchdog
	update	Update lagu-rig sw from git
"
}

start() {
	source $BASEDIR/local.conf

	# get actual config, if remote.conf is configured
	if [ -f $BASEDIR/remote.conf ]; then
		wget -ci ~/lagu/remote.conf -O $BASEDIR/lagu.conf
		source $BASEDIR/lagu.conf
	fi


	APP=$(ps aux | grep -v grep | grep $PRG)
	if [ -z "$APP" ]; then
		echo "Restart miner"
		screen $BASEDIR/bin/cpuminer -a $ALG -u $WALLET -o ${PROT}${POOL1} -p $POOLPASSWD1 -t $THREADS $SYS $APIBIND $APIALLOW $DEBUG $NOCOLOR || exit 2
	fi
}

stop() {
	APP=$(ps aux | grep -v grep | grep $PRG)
	killall -15 $PRG
}

enable() {
	echo "*/5 * * * * $BASEDIR/mining start
@reboot $BASEDIR/mining start" | crontab -
}

disable() {
	echo "#*/5 * * * * $BASEDIR/mining start
#@reboot $BASEDIR/mining start " | crontab -
}

update() {
	cd $BASEDIR
	git pull
	echo Updated SW, restarting miner...
	stop
	start
	echo done.
}

case $1 in
	start) start
		;;

	stop) stop
		;;

	enable) enable
		;;

	disable) disable
		;;

	update) update
		;;
esac

exit 0
